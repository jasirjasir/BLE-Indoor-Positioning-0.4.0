<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/primary"
    android:backgroundTintMode="multiply"
    android:background="@drawable/map_street_light">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:id="@+id/top_layout"
        android:paddingBottom="5dp"
        android:background="@color/primary_text"
        android:backgroundTint="@color/primary_text"
        android:backgroundTintMode="screen"
        android:paddingTop="5dp"
        android:weightSum="4">

        <AutoCompleteTextView
            android:id="@+id/start_act"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/button_bg"
            android:dropDownHeight="match_parent"
            android:hint="@string/start_txt"
            android:lines="1"
            android:layout_marginStart="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:textColor="@color/primary_light"
            android:textColorHint="@color/primary_light"
            android:textSize="24sp"
            android:elevation="24dp"/>

        <AutoCompleteTextView
            android:id="@+id/stop_act"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            android:paddingStart="20dp"
            android:background="@drawable/button_bg"
            android:dropDownHeight="match_parent"
            android:hint="@string/stop_txt"
            android:lines="1"
            android:textColor="@color/primary_light"
            android:textColorHint="@color/primary_light"
            android:textSize="24sp"
            android:elevation="24dp"/>
    </LinearLayout>
    <!-- android:background="@drawable/gracevilla_gf"-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/top_layout">
        <ImageView
            android:id="@+id/plan"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"


            android:src="@drawable/gadgeon_sec" />


            <TextView
                android:id="@+id/id_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="50dp"
                android:text="beacon data display  here"
                android:textColor="@color/md_white_1000" />

            <TextView
                android:id="@+id/id_debug1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="500dp"
                android:text="Debug 1"
                android:textColor="@color/md_white_1000" />

            <TextView
                android:id="@+id/id_debug2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="550dp"
                android:text="Debug 2"
                android:textColor="@color/md_white_1000" />
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:backgroundTintMode="screen"
        android:gravity="end"
        android:paddingTop="5dp"
        android:weightSum="5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_path"
            android:textColor="@color/md_white_1000"
            android:id="@+id/reset_path"
            android:clickable="true"

            android:layout_marginLeft="10dp"
           />
     <!--   <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_beacon"
            android:id="@+id/beacon_show"
            android:clickable="true"
            android:textColor="@color/md_white_1000"
            android:layout_marginLeft="50dp"
           />-->
        <CheckBox
            android:id="@+id/beacon_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Beacons"
            android:textColor="@color/md_white_1000" />

        <CheckBox
            android:id="@+id/debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_white_1000"
            android:layout_marginLeft="25dp"
            android:text="Debug" />
        <ImageView
            android:id="@+id/go_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/circle_bg"
            android:clickable="true"
            android:elevation="25dp"
            android:focusable="true"
            android:src="@drawable/chevron_right" />

    </LinearLayout>
</RelativeLayout>