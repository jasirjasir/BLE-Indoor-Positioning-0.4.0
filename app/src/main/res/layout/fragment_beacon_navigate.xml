<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/primary"
    android:backgroundTintMode="multiply"
    android:background="@drawable/map_street_light">

    <!-- android:background="@drawable/gracevilla_gf"-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/reset_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_path"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/holo_red_light"
            android:clickable="true"
            />
        <ImageView
            android:id="@+id/plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="-19dp"
            android:src="@drawable/gadgeon_sec" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:background="@color/primary_text"
        android:backgroundTint="@color/primary_text"
        android:backgroundTintMode="screen"
        android:paddingTop="5dp"
        android:weightSum="5">

        <AutoCompleteTextView
            android:id="@+id/start_act"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="2.15"
            android:background="@drawable/button_bg"
            android:dropDownHeight="match_parent"
            android:hint="@string/start_txt"
            android:lines="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/primary_light"
            android:textColorHint="@color/primary_light"
            android:textSize="24sp"
            android:elevation="-24dp"/>
        <!--<Spinner
            android:id="@+id/start_spinner"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:background="@android:color/holo_blue_light"
            android:entries="@array/start_roomlist"
            android:paddingEnd="10dp"
            android:spinnerMode="dialog" />-->
        <AutoCompleteTextView
            android:id="@+id/stop_act"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="2.15"
            android:background="@drawable/button_bg"
            android:dropDownHeight="match_parent"
            android:hint="@string/stop_txt"
            android:lines="1"
            android:paddingStart="10dp"
            android:textColor="@color/primary_light"
            android:textColorHint="@color/primary_light"
            android:textSize="24sp"
            android:elevation="-24dp"/>

        <!--<Spinner
            android:id="@+id/stop_spinner"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:background="@android:color/holo_blue_light"
            android:entries="@array/stop_roomlist"
            android:spinnerMode="dialog" />-->

        <ImageView
            android:id="@+id/go_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="0.7"
            android:background="@drawable/circle_bg"
            android:clickable="true"
            android:elevation="25dp"
            android:focusable="true"
            android:src="@drawable/chevron_right" />

    </LinearLayout>
</RelativeLayout>